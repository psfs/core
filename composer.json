{
    "name": "psfs/core",
    "version": "2.0.0",
    "description": "Php Simple Fast & Secure",
    "keywords": ["php", "framework", "mvc", "api", "RESTful", "twig"],
    "homepage": "https://github.com/psfs/core",
    "require": {
        "php" : "^8.2",
        "ext-gettext": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-gmp": "*",
        "ext-fileinfo": "*",
        "propel/propel": "2.0.0-alpha12",
        "symfony/console": "v5.x",
        "symfony/finder": "v5.x",
        "symfony/translation": "v5.x",
        "twig/twig": "3.6.0",
        "monolog/monolog": "2.x",
        "matthiasmullie/minify": "1.3.70"
    },
    "require-dev": {
        "phpunit/phpunit": "10.2.x-dev",
        "roave/security-advisories": "dev-master"
    },
    "config" : {
        "optimize-autoloader": true,
        "discard-changes": true,
        "apcu-autoloader": true
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Fran LÃ³pez",
            "email": "fran.lopez84@hotmail.es"
        }
    ],
    "support": {
        "email": "fran.lopez84@hotmail.es",
        "wiki": "https://github.com/psfs/core/wiki",
        "issues": "https://github.com/psfs/core/issues"
    },
    "autoload": {
        "psr-4": {
            "PSFS\\": "src/"
        },
        "files": ["src/autoload.php"],
        "exclude-from-classmap": ["src/tests"]
    },
    "bin": [
        "src/bin/psfs"
    ],
    "minimum-stability": "stable",
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clearCache"
        ],
        "clearCache": "rm -rf cache/*"
    }
}
